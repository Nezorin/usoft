@model WebApp.ViewModels.SignUpViewModel
@{
    ViewData["Title"] = "Регистрация";
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">

<head>
    <title>SoftU - Регистрация</title>
    <!-- HTML5 Shim and Respond.js IE10 support of HTML5 elements and media queries -->
    <!-- WARNING: Respond.js doesn't work if you view the page via file:// -->
    <!--[if lt IE 10]>
    <script src="https://oss.maxcdn.com/libs/html5shiv/3.7.0/html5shiv.js"></script>
    <script src="https://oss.maxcdn.com/libs/respond.js/1.4.2/respond.min.js"></script>
    <![endif]-->
    <!-- Meta -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0, user-scalable=0, minimal-ui">
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="description" content="" />
    <meta name="keywords" content="" />

    <!-- Favicon icon -->
    <link rel="icon" href="~/assets/images/favicon.ico" type="image/x-icon">
    <!-- fontawesome icon -->
    <link rel="stylesheet" href="~/assets/fonts/fontawesome/css/fontawesome-all.min.css">
    <!-- animation css -->
    <link rel="stylesheet" href="~/assets/plugins/animation/css/animate.min.css">
    <!-- vendor css -->
    <link rel="stylesheet" href="~/assets/css/style.css">

</head>

<body>
    <form method="post" asp-controller="Auth" asp-action="SignUp">
        <div class="auth-wrapper aut-bg-img-side cotainer-fiuid align-items-stretch">
            <div class="row align-items-center w-100 align-items-stretch bg-white">
                <div class="d-none d-lg-flex col-lg-8 aut-bg-img align-items-center d-flex justify-content-center">
                    @* <div class="col-md-8">
                        <h1 class="text-white mb-5">Login in SoftU</h1>
                        <p class="text-white">Lorem Ipsum is simply dummy text of the printing and typesetting industry.
                        Lorem Ipsum has been the industry's standard dummy text ever.</p>
                        </div> *@
                </div>
                <div class="col-lg-4 align-items-stret h-100 align-items-center d-flex justify-content-center">
                    <div class=" auth-content text-center">
                        <div class="mb-4">
                            <i class="feather icon-user-plus auth-icon"></i>
                        </div>
                        <h3 class="mb-4">Регистрация</h3>
                        @*<div class="input-group mb-3">
            <input type="number" class="form-control" placeholder="Номер студенческого билета">
        </div>*@
                        <div class="input-group mb-3">
                            <input type="email" name="Email" class="form-control" asp-for="Email" placeholder="Email">
                        </div>
                        <div class="input-group mb-4">
                            <input type="password" name="Password" class="form-control" asp-for="Password" placeholder="Пароль">
                        </div>
                        <div class="input-group mb-3">
                            <input type="text" name="LastName" class="form-control" asp-for="LastName" placeholder="Фамилия">
                        </div>
                        <div class="input-group mb-3">
                            <input type="text" name="FirstName" class="form-control" asp-for="FirstName" placeholder="Имя">
                        </div>
                        <div class="input-group mb-3">
                            <input type="text" name="MiddleName" class="form-control" asp-for="MiddleName" placeholder="Отчество">
                        </div>
                        <div class="form-check">
                            <input class="form-check-input" value="Группа1" asp-for="Group" type="radio" name="Group">
                            <label class="form-check-label" asp-for="Group">
                                Группа1
                            </label>
                        </div>
                        <div class="form-check">
                            <input class="form-check-input" value="Группа2" asp-for="Group" type="radio" name="Group">
                            <label class="form-check-label" asp-for="Group">
                                Группа2
                            </label>
                        </div>
                        <div class="form-check">
                            <input class="form-check-input" value="Группа3" asp-for="Group" type="radio" name="Group">
                            <label class="form-check-label" asp-for="Group">
                                Группа3
                            </label>
                        </div>
                        <div class="form-group text-left">
                            <div class="checkbox checkbox-fill d-inline">
                                <input type="checkbox" name="checkbox-fill-2" id="checkbox-fill-2">
                                <label for="checkbox-fill-2" class="cr">
                                    Я хочу получать <a href="#!"> новости</a>
                                    каждую неделю
                                </label>
                            </div>
                        </div>
                        <button type="submit" class="btn btn-primary shadow-2 mb-4">Зарегистрироваться</button>
                        <p class="mb-0 text-muted">Уже есть аккаунт? <a href="/Auth/@Pages.SignIn.Value"> Войти</a></p>
                    </div>
                </div>
            </div>
        </div>
    </form>
    <!-- Required Js -->
    <script src="~/assets/js/vendor-all.min.js"></script>
    <script src="~/assets/plugins/bootstrap/js/bootstrap.min.js"></script>

</body>

</html>
