    <div class="container">
        <div class="row h-100vh justify-content-center align-items-center">
            <div class="col-lg-9">
                <div class="sign-box">
                    <form class="needs-validation sign-form" novalidate asp-controller="Auth" asp-action="SignUp">
                        <input type="hidden" asp-for="Role" value="User" />
                        <div class="header-sign-form mb-20 text-center">
                            <p>Регистрация</p>
                        </div>
                        <div class="row">
                            <div class="mb-20 col-lg-6">
                                <div class="input-box">
                                    <input class="form-control" type="email" placeholder="Email*" required asp-for="Email">
                                    <div class="invalid-feedback">Поле обязательно!</div>
                                    <div class="valid-feedback">Успешно!</div>
                                </div>
                            </div>
                            <div class="mb-20 col-lg-6">
                                <div class="input-box">
                                    <input class="form-control" type="text" placeholder="Имя*" required asp-for="FirstName">
                                    <div class="invalid-feedback">Поле обязательно!</div>
                                    <div class="valid-feedback">Успешно!</div>
                                </div>
                            </div>
                            <div class="mb-20 col-lg-6">
                                <div class="input-box">
                                    <input class="form-control" type="text" placeholder="Фамилия*" required asp-for="LastName">
                                    <div class="invalid-feedback">Поле обязательно!</div>
                                    <div class="valid-feedback">Успешно!</div>
                                </div>
                            </div>
                            <div class="mb-20 col-lg-6">
                                <div class="input-box">
                                    <input class="form-control" type="text" placeholder="Отчество*" required asp-for="MiddleName">
                                    <div class="invalid-feedback">Поле обязательно!</div>
                                    <div class="valid-feedback">Успешно!</div>
                                </div>
                            </div>
                            <div class="mb-20 col-lg-6">
                                <div class="input-box">
                                    <input class="form-control" type="password" placeholder="Пароль*" required asp-for="Password">
                                    <div class="invalid-feedback">Поле обязательно!</div>
                                    <div class="valid-feedback">Успешно!</div>
                                </div>
                            </div>
                            <div class="mb-20 col-lg-6">
                                <div class="input-box">
                                    <input class="form-control" type="password" placeholder="Повтор пароля*" required>
                                    <div class="invalid-feedback">Поле обязательно!</div>
                                    <div class="valid-feedback">Успешно!</div>
                                </div>
                            </div>
                            <div class="col-lg-6 text-center mb-20">
                                <div class="radio-box">
                                    <p class="radio-p">Выбирите курс</p>
                                    <div class="form-check form-check-inline">
                                        <input class="form-check-input" type="radio" id="inlineRadio1" value="1" required asp-for="Course">
                                        <label class="form-check-label" for="inlineRadio1">1</label>
                                    </div>
                                    <div class="form-check form-check-inline">
