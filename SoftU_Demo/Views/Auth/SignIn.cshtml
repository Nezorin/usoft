<body>
    <form method="post" asp-controller="Auth" asp-action="SignIn">*
        <div asp-validation-summary="ModelOnly"></div>
        <div class="auth-wrapper aut-bg-img-side cotainer-fiuid align-items-stretch">
            <div class="row align-items-center w-100 align-items-stretch bg-white">
                <div class="d-none d-lg-flex col-lg-8 aut-bg-img align-items-center d-flex justify-content-center">
                    @* <div class="col-md-8">
                        <h1 class="text-white mb-5">Московский Государственный Университет</h1>
                        <p class="text-white"></p>
                        </div> *@
                </div>
                <div class="col-lg-4 align-items-stret h-100 align-items-center d-flex justify-content-center">
                    <div method="post" asp-controller="Auth" asp-action="SignIn"
                         class=" auth-content text-center">
                        <div class="mb-4">
                            <i class="feather icon-unlock auth-icon"></i>
                        </div>
                        <h3 class="mb-4">Вход в систему</h3>
                        <div class="input-group mb-3">
                            <input type="text" name="UserName" class="form-control" asp-for="UserName" placeholder="Логин">
                            <span asp-validation-for="UserName"></span>
                        </div>
                        <div asp-for="Password" class="input-group mb-4">
                            <input type="password" name="Password" class="form-control" asp-for="Password" placeholder="Пароль">
                            <span asp-validation-for="Password"></span>
                        </div>
                        <div class="form-group text-left">
                            <div class="checkbox checkbox-fill d-inline">
                                <input type="checkbox" asp-for="RememberMe" name="checkbox-fill-1" id="checkbox-fill-a1" checked="">
                                <label for="checkbox-fill-a1" class="cr"> Запомнить меня</label>
                            </div>
                        </div>
                        <button class="btn btn-primary shadow-2 text-white mb-4" type="submit">Войти</button>
                        <p class="mb-2 text-muted">
                            Забыли пароль? <a asp-action="ForgotPassword">Сбросить</a>
                        </p>
                        <p class="mb-0 text-muted">
                            Еще нет аккаунта? <a href="/Auth/@Pages.SignUp.Value">Регистрация</a>
                        </p>

                        <div class="alert alert-danger m-t-20">
                            <span class="text-uppercase">демо-версия</span>
                        </div>
                        <div class="alert alert-primary m-t-20">
                            <span>Нажмите кнопку "Войти" для входа в демо-версию приложения</span>
                        </div>
                    </div>
                </div>
            </div>
        </div>
     </form>*
        <!-- Required Js -->
        <script src="~/assets/js/vendor-all.min.js"></script>
        <script src="~/assets/plugins/bootstrap/js/bootstrap.min.js"></script>


</body>

