<div class="container">
    <div class="row justify-content-center align-items-center">
        <div class="col-lg-6">
            <div class="changePassword-box">
                <form class="needs-validation changePassword-form" novalidate>
                    <div class="header-changePassword-form mb-20 text-center">
                        <p>Изменение пароля</p>
                    </div>
                    <div class="input-box mb-20">
                        <input class="form-control" type="password" placeholder="Старый пароль*" required>
                        <div class="invalid-feedback">Поле обязательно!</div>
                        <div class="valid-feedback">Успешно!</div>
                    </div>
                    <div class="input-box mb-20">
                        <input class="form-control" type="password" placeholder="Новый пароль*" required>
                        <div class="invalid-feedback">Поле обязательно!</div>
                        <div class="valid-feedback">Успешно!</div>
                    </div>
                    <div class="btn-box text-center">
                        <button class="changePassword-btn">Сохранить</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Styles{
    <!-- notification css -->
    <link rel="stylesheet" type="text/css" href="/changePassword/bootstrap/css/bootstrap.min.css">
    <link rel="stylesheet" type="text/css" href="/changePassword/css/changePassword.css">
}

@section Scripts{
    <script src="/changePassword/jquery/jquery-3.5.1.min.js"></script>
    <script src="/changePassword/bootstrap/js/bootstrap.min.js"></script>
    <script>
        (function () {
            'use strict';
            window.addEventListener('load', function () {
                var forms = document.getElementsByClassName('needs-validation');
                var validation = Array.prototype.filter.call(forms, function (form) {
                    form.addEventListener('submit', function (event) {
                        if (form.checkValidity() === false) {
                            event.preventDefault();
                            event.stopPropagation();
                        }
                        form.classList.add('was-validated');
                    }, false);
                });
            }, false);
        })();
    </script>
}

